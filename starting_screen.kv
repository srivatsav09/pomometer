
#:import utils kivy.utils

<Starting>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "imgs/Capture.jpg"
    MDLabel:
        size_hint: [.88, .1]
        pos_hint: {'top':.95, 'center_x':.5}
        halign: 'center'
        text: '[color=#008200]P[/color]omo[color=#008200] Meter[/color]'
        markup: True
        font_size: '55sp'
        bold: True
    Image:
        source: 'imgs/star1.png'
        size_hint: [.18,.22]
        pos_hint: {'top':1.06, 'x':0}
        allow_stretch: True
        keep_rotio: False
    Image:
        source: 'imgs/Thakali.gif'
        size_hint: [.5, .3]
        pos_hint: {"center_x":.5, 'top':.85}
        allow_stretch: True
        keep_rotio: False
    MDCard:
        id: the_card
        pos_hint: {'top':.5, 'center_x':.5}
        size_hint_x: None
        size_hint_y: None
        height: 200
        width: 320
        elevation: 0
        md_bg_color: utils.get_color_from_hex('#FEECE9')
    MDFillRoundFlatButton:
        id: btn
        pos_hint: {'top':.1, 'center_x':.5}
        size_hint: [.9, .08]
        text: '[b]Take a PomoDoro[/b]'
        theme_text_color: 'Custom'
        text_color: [0,0,0,1]
        font_size: '30sp'
        markup: True
        md_bg_color: utils.get_color_from_hex('#1D6000')
        on_release:
            app.switch_to_main()
    MDFillRoundFlatButton:
        id: calbtn
        pos_hint: {'top':.2, 'center_x':.5}
        size_hint: [.9, .08]
        text: '[b]Go to calender[/b]'
        theme_text_color: 'Custom'
        text_color: [0,0,0,1]
        font_size: '30sp'
        markup: True
        md_bg_color: utils.get_color_from_hex('#1D6000')
        on_release:
            app.switch_to_Calender()
            
